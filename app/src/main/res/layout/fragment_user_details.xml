<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainDetailsView"
    tools:context=".ui.usersdetails.UserDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        tools:text="Alex Tokarev"
        app:layout_constraintTop_toTopOf="@id/cardView6"
        app:layout_constraintStart_toEndOf="@id/cardView6"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline5"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/divider"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView6"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_goneMarginTop="16dp" />


    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        tools:text="Baker St. 21, London"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/cardView6"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        />

    <TextView
        android:id="@+id/dateOfBirthTextView"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        tools:text="15/02/2001"
        app:layout_constraintTop_toBottomOf="@id/addressTextView"
        app:layout_constraintStart_toEndOf="@id/cardView6"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="0dp"
        android:layout_marginTop="32dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:text="@string/emailLabel"
        app:layout_constraintStart_toStartOf="@id/cardView6"
        app:layout_constraintTop_toBottomOf="@id/cardView6"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline6"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        app:layout_constraintBottom_toBottomOf="@id/emailLabel"
        app:layout_constraintStart_toEndOf="@id/emailLabel"
        app:layout_constraintTop_toTopOf="@id/emailLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="tokarevalex2805@gmail.com" />

    <TextView
        android:id="@+id/cellLabel"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:text="@string/cellLabel"
        app:layout_constraintStart_toStartOf="@id/cardView6"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Headline6"
        />
    <TextView
        android:id="@+id/cellTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        app:layout_constraintBottom_toBottomOf="@id/cellLabel"
        app:layout_constraintStart_toEndOf="@id/cellLabel"
        app:layout_constraintTop_toTopOf="@id/cellLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="+380972869482" />



</androidx.constraintlayout.widget.ConstraintLayout>